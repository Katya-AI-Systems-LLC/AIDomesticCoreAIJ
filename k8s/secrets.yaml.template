# AI Platform SDK - Kubernetes Secrets Template
# WARNING: This is a template. Do NOT commit actual secrets to git!
# 
# How to use:
# 1. Copy this file: cp k8s/secrets.yaml.template k8s/secrets.yaml
# 2. Edit k8s/secrets.yaml with actual values
# 3. Add k8s/secrets.yaml to .gitignore
# 4. Create secrets: kubectl apply -f k8s/secrets.yaml
# 
# Or use sealed-secrets for encrypted storage

---
apiVersion: v1
kind: Secret
metadata:
  name: aiplatform-secrets
  namespace: aiplatform
  labels:
    app: aiplatform
type: Opaque
stringData:
  # Database Credentials
  database-url: "postgresql://user:password@postgres:5432/aiplatform"
  
  # Redis Credentials
  redis-url: "redis://:password@redis:6379/0"
  
  # JWT Secret for authentication
  jwt-secret: "your-super-secret-jwt-key-change-this"
  
  # API Keys
  api-key: "sk_live_your_api_key_here"
  
  # Quantum Computing Backend Keys (if using cloud services)
  quantum-ibm-token: "your-ibm-quantum-token"
  quantum-aws-access-key: "your-aws-access-key"
  quantum-aws-secret-key: "your-aws-secret-key"
  
  # Third-party Service Keys
  github-token: "your-github-token"
  slack-webhook: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
  datadog-api-key: "your-datadog-api-key"
  
  # TLS Certificates (if using mTLS)
  tls-cert: |
    -----BEGIN CERTIFICATE-----
    YOUR_CERTIFICATE_HERE
    -----END CERTIFICATE-----
  
  tls-key: |
    -----BEGIN PRIVATE KEY-----
    YOUR_PRIVATE_KEY_HERE
    -----END PRIVATE KEY-----

