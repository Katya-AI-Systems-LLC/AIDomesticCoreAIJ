{
  "dashboard": {
    "title": "Database Performance",
    "uid": "database-performance",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Database Size",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "pg_database_size_bytes / 1024 / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "GB"
          }
        }
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "pg:cache_hit_ratio * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Query Duration (ms)",
        "type": "graph",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "pg:query_duration:avg:1m * 1000",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Connections by State",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (state) (pg_stat_activity_count_by_state)",
            "legendFormat": "{{ state }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          }
        ]
      },
      {
        "id": 6,
        "title": "Replication Lag (seconds)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "pg:replication_lag:seconds",
            "legendFormat": "{{ slot_name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Lag (seconds)"
          }
        ]
      },
      {
        "id": 7,
        "title": "Transactions Per Second",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(pg_stat_user_tables_n_tup_ins[1m]) + rate(pg_stat_user_tables_n_tup_upd[1m]) + rate(pg_stat_user_tables_n_tup_del[1m])",
            "legendFormat": "Transactions",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "tps",
            "label": "TPS"
          }
        ]
      },
      {
        "id": 8,
        "title": "Table Bloat Ratio",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, pg_table_bloat_ratio)",
            "legendFormat": "{{ table_name }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Index Usage Statistics",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "pg_stat_user_indexes_idx_scan",
            "legendFormat": "{{ indexrelname }}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
